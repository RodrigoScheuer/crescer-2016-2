
@{
    Layout = null;
    ViewBag.Title = "Index";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body style="background-image:url(http://cdn.wallpapersafari.com/57/89/MY5ShV.jpg);">
    <div> 
        <h2>Bem Vindo</h2>
        <h2>Login</h2>


        @using (Html.BeginForm("FazerLogin", "Login", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.TextBox("usuario", "", new { placeholder = "usuario" });
            <br /><br />
            @Html.Password("senha", "", new { placeholder = "senha" });

            <button type="submit">Entrar</button>

            <h5 style="color:red;">@TempData["mensagemLogin"]</h5>
        }

    </div>
</body>
</html>
