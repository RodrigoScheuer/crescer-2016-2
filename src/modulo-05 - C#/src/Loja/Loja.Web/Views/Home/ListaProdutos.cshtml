@model  List<Loja.Dominio.Produto>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ListaProdutos</title>
</head>
<body>
    <center><h1>Listagem de Produtos</h1></center><br /><hr />
    <div style="margin-left:300px; margin-right:300px;"> 

        <center><h3><a href="~/Home/Cadastrar">Cadastrar novo Produto</a></h3><br /></center>
        <h3 style="color:red">
            @TempData["mensagemCadastro"]
        </h3>

        @if (Model != null)
        {

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Produto</th>
                        <th style="width: 40px;">Editar</th>
                        <th style="width: 40px;">Excluir</th>
                    </tr>
                </thead>
                @foreach (var produto in Model)
                {
                    <tr>

                        <td>
                            @produto.Nome
                        </td>
                        <td>
                            <a class="glyphicon glyphicon-pencil" href="~/Home/Cadastrar?id=@produto.Id"></a>
                        </td>
                        <td>
                            <a class="glyphicon glyphicon-trash" href="~/Home/ExcluirProduto?id=@produto.Id"></a>
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <h2 style="align-content:center">Nenhum personagem cadastrado!</h2>
        }

    </div>
</body>
</html>
