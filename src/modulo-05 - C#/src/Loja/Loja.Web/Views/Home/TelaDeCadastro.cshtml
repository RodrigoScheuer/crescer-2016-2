@model Loja.Web.Models.ProdutoModel
@{
    ViewBag.Title = "Tela de Cadastro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>@ViewBag.Title</title>
    @*cor vermelha nas validações*@
    <style>
        .field-validation-error {
            color: #a94442;
        }
    </style>
</head>
<body>
    <div class="jumbotron">
        <h1>Cadastrar Novo Produto</h1>
    </div>
    <h2 style="color:red">@TempData["mensagemErro"]</h2>

    @using (Html.BeginForm("Salvar", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
    {

        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Nome, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10" style="width:800px;">
                @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Nome)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Valor, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10" style="width:800px;">
                @Html.TextBoxFor(model => model.Valor, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Valor)
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Salvar</button>
            </div>
        </div>
    }

    @*Java Script, validações, formatar decimal, formatar data modelo Brasil*@
    @section Scripts {
        <script src="~/Scripts/jquery.validate.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

        <script type="text/javascript">
        $.validator.methods.number = function (value, element) {
            var regex = /^(\d*)(\,\d{1,2})?$/; //99999,99
            return this.optional(element) || regex.test(value);
        }
        </script>
    }

</body>
</html>